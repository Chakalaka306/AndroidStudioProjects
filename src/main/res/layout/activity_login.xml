<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="fh_muenster.de.liveticker.LoginActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <!-- Login progress -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Willkommen auf der Liveticker Seite"
        android:id="@+id/textView"
        android:layout_marginTop="56dp"
        android:height="25dp"
        android:width="250dp"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Einloggen"
        android:id="@+id/btnLogin"
        android:height="25dp"
        android:width="250dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_below="@+id/TVpassword"
        android:layout_alignStart="@+id/btnRegister"
        android:onClick="onButtonClick"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrieren"
        android:id="@+id/btnRegister"
        android:height="25dp"
        android:width="250dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_below="@+id/btnLogin"
        android:layout_alignStart="@+id/TVpassword"
        android:onClick="onButtonClick" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:height="25dp"
        android:width="250dp"
        android:id="@+id/TVpassword"
        android:textSize="15dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TVusername"
        android:height="25dp"
        android:width="250dp"
        android:textSize="15dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benutzername:"
        android:height="25dp"
        android:width="250dp"
        android:textSize="15dp"
        android:id="@+id/textView2"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passwort:"
        android:height="25dp"
        android:width="250dp"
        android:textSize="15dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/TVusername"
        android:layout_alignStart="@+id/TVusername" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weiter als Gast"
        android:height="25dp"
        android:width="250dp"
        android:textSize="15dp"
        android:id="@+id/btnGuest"
        android:layout_below="@+id/btnRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:onClick="onButtonClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvError"
        android:layout_below="@+id/btnRegister"
        android:layout_alignStart="@+id/btnRegister" />
</RelativeLayout>
